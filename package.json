{
	"name": "frigg",
	"type": "module",
	"author": "Rune Klein (@rnkln)",
	"description": "Mono repo containing project configs",
	"version": "0.0.1-rc.1",
	"license": "MIT",
	"private": true,
	"packageManager": "yarn@3.5.0",
	"repository": {
		"type": "git",
		"url": "git@github.com:klnjs/frigg.git"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"verify": "yarn workspaces foreach -p run verify",
		"version": "yarn workspaces foreach version",
		"publish": "yarn workspaces foreach -p --no-private npm publish --tolerate-republish",
		"eslint": "eslint ./packages --max-warnings 0 --cache --cache-location=./.eslintcache",
		"prettier": "prettier ./packages --check --cache --cache-location=./.prettiercache"
	},
	"devDependencies": {
		"eslint": "8.40.0",
		"eslint-plugin-import": "2.27.5",
		"prettier": "2.8.8"
	}
}
