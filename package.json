{
	"name": "frigg",
	"type": "module",
	"author": "Rune Klein (@rnkln)",
	"description": "Mono repo containing project configs",
	"version": "0.0.1-rc.1",
	"license": "MIT",
	"private": true,
	"packageManager": "yarn@3.3.1",
	"repository": {
		"type": "git",
		"url": "git@github.com:klnjs/frigg.git"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"sync": "yarn node ./scripts/cli sync",
		"bump": "yarn workspaces foreach -p npm publish --tolerate-republish",
		"verify": "yarn workspaces foreach -p run verify",
		"publish": "yarn workspaces foreach -p npm publish --tolerate-republish",
		"lint": "eslint ./packages --max-warnings 0 --cache --cache-location=./.eslintcache",
		"code": "prettier ./packages --check --cache --cache-location=./.prettiercache"
	},
	"devDependencies": {
		"eslint": "8.32.0",
		"eslint-plugin-import": "2.27.5",
		"find-up": "6.3.0",
		"inquirer": "9.1.4",
		"prettier": "2.8.3",
		"yargs": "17.6.2"
	}
}
